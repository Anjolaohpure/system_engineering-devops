#!/usr/bin/env bash
# This script runs indefinitely, printing a message, and handles SIGTERM
# by printing "I am invincible!!!" without terminating.

# Function to handle the SIGTERM signal
handle_sigterm() {
    echo "I am invincible!!!"
}

# Set up the trap for SIGTERM. When SIGTERM (signal 15) is received,
# the handle_sigterm function will be executed.
trap 'handle_sigterm' SIGTERM

# Infinite loop to display "To infinity and beyond"
while true; do
    echo "To infinity and beyond"
    sleep 2 # Pause for 2 seconds between iterations
done
